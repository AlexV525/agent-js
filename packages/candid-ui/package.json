{
  "name": "@dfinity/candid-ui",
  "version": "1.0.0",
  "description": "This package provides a simple UI for the Candid Interface Declaration Language. It is a simple web application that can be used to explore Candid interfaces, and to generate calls to canisters using them.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "vite ./src",
    "build": "tsc; webpack",
    "analyze-build": "webpack --profile --json; webpack-bundle-analyzer",
    "postbuild": "tsc -p tsconfig.json --emitDeclarationOnly --declaration --declarationDir ./dist --skipLibCheck",
    "test": "vitest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "css-loader": "^6.7.3",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "webpack": "^5.77.0",
    "webpack-bundle-analyzer": "^4.8.0"
  },
  "dependencies": {
    "@dfinity/agent": "^0.15.4",
    "@dfinity/candid": "^0.15.4",
    "@dfinity/principal": "^0.15.4",
    "d3": "^7.8.4",
    "d3-flame-graph": "^4.1.3"
  },
  "browserslist": [
