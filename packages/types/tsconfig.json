{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./lib",
    "paths": {
      "@dfinity/types": ["src"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src/*.ts"],
  "references": []
}
